<?xml version="1.0" encoding="iso-8859-1"?>

<root logo="logo.png">
	<announcement text="FG Browser v1.2.2" font="emotefont" />

	<properties>
		<name>FG Browser</name>
		<version>1.2.2</version>

		<author>Fen</author>
		<description>Adds a tabbed browser window for containing and searching records</description>

		<loadorder>1000</loadorder>
	</properties>
	<base>
		<includefile source="common/strings_common.xml"/>
		<includefile source="common/template_common.xml"/>
		<includefile source="common/record_browser.xml"/>
		<includefile source="common/graphics.xml"/>

		<script name="BrowserManager" file="scripts/browser_manager.lua" />
		<script name="SearchManager" file="scripts/search_manager.lua" />
		<script name="SearchIndexer" file="scripts/search_indexer.lua" />

		<includefile source="lib_async/async_lib.xml"/>
		<includefile source="lib_async/strings_async.xml"/>
		<script name="AsyncLib" file="lib_async/scripts/async_lib.lua" />
	</base>
</root>
